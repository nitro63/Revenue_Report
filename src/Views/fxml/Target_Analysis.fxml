                  </TableColumn>
                  <TableColumn prefWidth="229.0" text="CUM. TARGET OUTSTANDING">
                     <columns>
                        <TableColumn fx:id="colAmtOut" prefWidth="97.0" text="AMOUNT(GH)" />
                        <TableColumn fx:id="colPercOut" prefWidth="100.0" text="PERCENTAGE %" />
                     </columns>
                  </TableColumn>
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox prefHeight="100.0" prefWidth="200.0" />
         </children>
      </VBox>
   </children>
   <stylesheets>
      <URL value="@../Stylesheets/tableview.css" />
      <URL value="@../Stylesheets/report.css" />

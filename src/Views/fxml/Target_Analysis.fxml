            </Label>
            <Label fx:id="lblYear" layoutX="57.0" text="NAN">
               <font>
                  <Font name="System Bold" size="19.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="104.0" layoutY="76.0">
         <children>
            <Label text="REVENUE CENTER:">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="lblRevenueCenter" layoutX="168.0" text="NAN">
               <font>
                  <Font name="System Bold" size="19.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <VBox fx:id="monthlyTemplate" alignment="CENTER" layoutX="1.0" layoutY="18.0" AnchorPane.topAnchor="15.0">
         <children>
            <HBox alignment="CENTER" prefHeight="67.0" prefWidth="1030.0" VBox.vgrow="ALWAYS">
               <children>
                  <Pane prefHeight="200.0" prefWidth="100.0" />
                  <ComboBox fx:id="cmbReportCent" onAction="#SelectedCenter" prefHeight="25.0" prefWidth="167.0" promptText="Revenue Center" />
                  <Pane prefHeight="200.0" prefWidth="100.0" />

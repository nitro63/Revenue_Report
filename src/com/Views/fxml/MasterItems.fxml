            <DropShadow />
         </effect>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
      <HBox alignment="CENTER" layoutX="70.0" layoutY="-3.0" prefHeight="41.0" prefWidth="777.0">
         <children>
            <Pane prefHeight="55.0" prefWidth="124.0" />
            <HBox alignment="CENTER">
               <children>
                  <AnchorPane>
                     <children>
                        <ComboBox fx:id="cmbMasterItemsYear" layoutY="7.0" onAction="#SelectedYear" prefHeight="25.0" prefWidth="167.0" promptText="Year" />
                        <Label fx:id="lblYearWarn" prefHeight="17.0" prefWidth="93.0" text="field is required!" textFill="#ee2222" visible="false">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </AnchorPane>
               </children>
            </HBox>
            <Pane prefHeight="200.0" prefWidth="100.0" />
            <HBox alignment="CENTER">
               <children>
                  <JFXButton fx:id="btnShowReport" buttonType="RAISED" onAction="#ShowReport" prefHeight="25.0" prefWidth="116.0" text="Show Report" />
               </children>
            </HBox>
            <Pane prefHeight="200.0" prefWidth="100.0" />
         </children>
      </HBox>
